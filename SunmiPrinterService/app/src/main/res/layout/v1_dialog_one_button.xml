<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_white_round_bg_v1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_voice"
            android:layout_width="36dp"
            android:layout_gravity="end|top"
            android:layout_height="36dp">
            <ImageView
                android:id="@+id/img_voice"
                android:layout_centerInParent="true"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/voice_on"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/textView_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:textColor="#222222"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="2dp"
            android:textColor="#222222"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/linear_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ripple_bg_bottom_v1"
            android:clickable="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dcdcdc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:gravity="center"
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/textView_cut"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#dcdcdc"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/textView_btn2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:gravity="center"
                    android:textColor="#222222"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>