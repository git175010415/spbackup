<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="56dp"
    android:orientation="horizontal" >
    
	<LinearLayout 
	    android:layout_width="630dp"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:paddingStart="284dp">
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/printer_paper_setting"
	        android:textSize="16sp"
	        android:textColor="#222222"/>
	    <RadioGroup 
	        android:id="@+id/rg_paper"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="32dp"
	        android:orientation="vertical">
	       	<RadioButton
	       	    android:id="@+id/rb_paper_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:button="@drawable/select_bg"
               	android:textColor="#222222"
               	android:textSize="18sp"
               	android:checked="true"
                android:text="    80mm"/>
	       	<View 
	       	    android:layout_width="match_parent"
	       	    android:layout_height="1dp"
	       	    android:layout_marginTop="22dp"
	       	    android:background="#dedede"/>
			<RadioButton
			    android:id="@+id/rb_paper_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"  
                android:layout_marginTop="22dp"
                android:button="@drawable/select_bg"
                android:textColor="#222222"
                android:textSize="18sp"
                android:text="    58mm"/>
	    </RadioGroup>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical">
	   	<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/printer_paper_pic"
	        android:textSize="16sp"
	        android:layout_marginBottom="13dp"
	        android:textColor="#222222"/>
	   	<FrameLayout
	   	    android:id="@+id/fl_paper_two"
	   	    android:visibility="gone"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content">
	   	    <ImageView 
	   	        android:layout_width="wrap_content"
	   	        android:layout_height="wrap_content"
	   	        android:src="@drawable/bg_paper58"/>
	   	    <TextView 
	   	        android:layout_marginTop="60dp"
	   	        android:layout_marginStart="22dp"
	   	        android:layout_width="176dp"
	   	        android:layout_height="wrap_content"
	   	        android:gravity="center_horizontal"
	   	        android:textSize="12sp"
	   	        android:textColor="#222222"
	   	        android:text="@string/text_paper_title"/>
	   	    <TextView 
	   	        android:layout_marginTop="110dp"
	   	        android:layout_marginStart="22dp"
	   	        android:layout_width="176dp"
	   	        android:layout_height="wrap_content"
	   	        android:textSize="12sp"
	   	        android:textColor="#222222"
	   	        android:text="@string/text_paper_content"/>
	   	</FrameLayout>
	   	<FrameLayout 
	   	    android:id="@+id/fl_paper_one"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content">
	   	    <ImageView 
	   	        android:layout_width="wrap_content"
	   	        android:layout_height="wrap_content"
	   	        android:src="@drawable/bg_paper80"/>
	   	    <TextView 
	   	        android:layout_marginTop="60dp"
	   	        android:layout_marginStart="30dp"
	   	        android:layout_width="220dp"
	   	        android:layout_height="wrap_content"
	   	        android:gravity="center_horizontal"
	   	        android:textSize="12sp"
	   	        android:textColor="#222222"
	   	        android:text="@string/text_paper_title"/>
	   	    <TextView 
	   	        android:layout_marginTop="110dp"
	   	        android:layout_marginStart="30dp"
	   	        android:layout_width="220dp"
	   	        android:layout_height="wrap_content"
	   	        android:textSize="12sp"
	   	        android:textColor="#222222"
	   	        android:text="@string/text_paper_content"/>
	   	</FrameLayout>
	</LinearLayout>
</LinearLayout>
